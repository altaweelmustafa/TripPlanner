<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/edtTripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter trip name here"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/edtTripLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter location here"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/edtTripPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter total price here"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/edtTripDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter date here"
            android:inputType="date"/>

        <Button
            android:id="@+id/btnSaveTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
